{
  "name": "express-prisma",
  "version": "1.0.0",
  "description": "Paystack Future Stack take-home assessment",
  "repository": "https://github.com/Aphatheology/future-stack-assessment",
  "author": "Aphatheology",
  "license": "MIT",
  "keywords": [
    "api",
    "nodejs",
    "express",
    "typescript",
    "mysql",
    "prisma",
    "product",
    "cart",
    "sku"
  ],
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node ./dist/server.js\"",
    "prod": "cross-env NODE_ENV=production tsc && node ./dist/server.js",
    "build": "yarn generate:prisma && yarn db:deploy && tsc",
    "start": "node ./dist/server.js",
    "generate:prisma": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "prisma": "^6.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ulid": "^3.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2"
  }
}
